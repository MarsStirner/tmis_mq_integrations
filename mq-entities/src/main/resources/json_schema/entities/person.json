{
  "id": "http://bars-open.ru/medvtr/json-schema/person.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "person",
  "description": "Описание пациента МИС ()",
  "type": "object",
  "javaType": "ru.bars_open.medvtr.mq.entities.Person",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Идентифкатор МИС",
      "minimum": 0
    },
    "lastName": {
      "type": "string",
      "description": "Фамилия"
    },
    "firstName": {
      "type": "string",
      "description": "Имя"
    },
    "patrName": {
      "type": "string",
      "description": "Отчество"
    },
    "sex": {
      "enum": [
        "MALE",
        "FEMALE",
        "UNKNOWN"
      ],
      "description": "Пол пациента"
    },
    "birthDate": {
      "type": "string",
      "description": "дата и время рождения пациента",
      "format": "date-time"
    },
    "addresses": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "./address.json"
      },
      "description": "Адреса пациента (тип адреса внутри элемента)"
    }
  },
  "required": [
    "id"
  ]
}